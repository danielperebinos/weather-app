ScreenManager:
    LoadingScreen:
    HomeScreen:

<LoadingScreen>:
    name: "loading"
    canvas.before:
        Color:
            rgba: 0.11, 0.12, 0.22, 1
        Rectangle:
            size: self.size


    FloatLayout:
        Image:
            source: "assets/loading.png"
            size_hint: None, None
            size: dp(120), dp(120)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            padding: dp(20)
            size_hint: 0.8, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                active: True
                pos_hint: {"center_x": 0.5}

<HomeScreen>:
    name: "home"

    canvas.before:
        Rectangle:
            source: "assets/bk2.png"
            size: self.size
            pos: self.pos

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        MDBoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)
            pos_hint: {"center_x": 0.5}

            Image:
                source: "assets/loading.png"
                size_hint: None, None
                size: dp(75), dp(75)

            MDLabel:
                text: "Weather App"
                halign: "left"
                font_style: "H4"
                theme_text_color: "Primary"

        MDTextField:
            id: city_input
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            mode: "fill"  # Înlocuiește cu fill sau outlined
            hint_text: "Enter city name"
            icon_right: "magnify"

        MDRaisedButton:
            text: "Get Weather"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            md_bg_color: app.theme_cls.primary_color
            on_release: root.get_weather()

        MDCard:
            id: weather_card
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            padding: dp(20)
            elevation: 0
            orientation: 'vertical'
            md_bg_color: (0, 0, 0, 0)  # Transparent
            opacity: 0